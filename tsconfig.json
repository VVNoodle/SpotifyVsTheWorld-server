{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "types/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./types",
        ]
    },
    "include": [
        "./*" ,
     ],
}